<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".SocialMediaIcons">


    <LinearLayout
        android:id="@+id/Socialmedia"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/acrivity_margin_medium"
            android:layout_marginTop="@dimen/acrivity_margin_medium"
            android:layout_weight="1"
            app:srcCompat="@drawable/icons8_facebook__1_" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/acrivity_margin_medium"
            android:layout_marginTop="@dimen/acrivity_margin_medium"
            android:layout_weight="1"
            app:srcCompat="@drawable/icons8_google" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/acrivity_margin_medium"
            android:layout_marginTop="@dimen/acrivity_margin_medium"
            android:layout_weight="1"
            app:srcCompat="@drawable/icons8_instagram" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>